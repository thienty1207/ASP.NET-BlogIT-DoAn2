
@{
    ViewBag.Title = "Thêm Tag";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model BlogIT.Models.Tag


<div class="container mt-5">
    <h2 class="text-center">Thêm Tag</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.Name)
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Nhập tên tag..." })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group form-check">
                    @Html.CheckBoxFor(model => model.Status, new { @class = "form-check-input" })
                    @Html.LabelFor(model => model.Status, "Hoạt động", new { @class = "form-check-label" })
                </div>

                <button type="submit" class="btn btn-primary">Lưu</button>
                @Html.ActionLink("Quay lại", "ManageTag", null, new { @class = "btn btn-secondary" })
                @if (TempData["mess"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        @Html.Raw(TempData["mess"].ToString())
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

            </div>
        </div>
    }
</div>


