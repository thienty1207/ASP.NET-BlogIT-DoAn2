@model BlogIT.Models.User

@{
    ViewBag.Title = "Thay Đổi Thông Tin Cá Nhân";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<section class="breadcrumb-outer text-center bg-orange position-relative">
    <div class="container">
        <div class="breadcrumb-content">
            <h2>Thay Đổi Thông Tin Cá Nhân</h2>
            <nav aria-label="breadcrumb">
                
            </nav>
        </div>
    </div>
    <div class="section-overlay"></div>
</section>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            @using (Html.BeginForm("ChangeProfile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <label for="FullName">Họ và Tên</label>
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", required = "required", placeholder = "Nhập họ và tên của bạn" })
                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="Bio">Tiểu Sử</label>
                    @Html.TextAreaFor(m => m.Bio, new { @class = "form-control", rows = 5, id = "Bio", placeholder = "Nhập tiểu sử của bạn" })
                    @Html.ValidationMessageFor(m => m.Bio, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="ProfileImage">Hình Ảnh Đại Diện</label>
                    <input type="file" class="form-control-file" id="ProfileImage" name="ProfileImage" />
                    <small class="form-text text-muted">Chọn hình ảnh đại diện (Kích thước tối đa: 2MB)</small>
                </div>

                <button type="submit" class="btn btn-success">Cập Nhật</button>
            }
        </div>
    </div>
</div>

<script>
    CKEDITOR.replace('Bio'); // Khởi tạo CKEditor cho trường tiểu sử
</script>

<style>
    .breadcrumb-outer {
        padding: 50px 0;
        position: relative;
        color: white;
    }

    .section-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
    }

    .card {
        margin-top: 30px;
    }

    .form-control-file {
        margin-top: 5px;
    }
</style>
